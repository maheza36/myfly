<% form_name ||= "Manage" %>
<h1 class="text-center">  <%= form_name %> airline </h1>
<%= form_for @airlines , method: (form_name.downcase == 'edit' ? 'put' : 'post') do |f| %>
  <% if @airlines.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= pluralize(@airlines.errors.count, "error") %> prohibited
          this article from being saved:
        </h2>
        <ul>
          <% @airlines.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <div class="form-group">
    <%= f.label :name%>
    <%= f.text_field :name, class: "form-control"%>
  </div>
  <%= f.submit "#{form_name} airlines", class: "btn btn-primary" %>
  <a href="<%= airlines_path %>" class="btn btn-default"> View all </a>
<% end %>
