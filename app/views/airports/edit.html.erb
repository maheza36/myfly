<div class="container">
  <h1 class="text-center">
    EDIT AIRPORT
  </h1>
</div>

<div class="container">
  <%= form_for @airport do |a| %>
    <div class="form-group">
      <%= a.label :name %>
      <%= a.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= a.label :city_id %>
      <%= a.text_field :city_id, class: "form-control" %>
    </div>
    <%= a.submit "Edit Airport", class:"btn btn-primary" %>
  <% end %>
</div>

<div class="container">
  <% if @airport.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@airport.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @airport.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
