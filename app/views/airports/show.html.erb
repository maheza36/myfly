<div class="container">
  <h1 class="text-center">AIRPORTS</h1>
</div>
<div class="container">
  <div class="text-center">
    <a href="<%= airports_path %>" class="btn btn-primary"> View all </a>
    <p></p>
  </div>
</div>
<div class="container">
  <section>

    <ul class="col-sm-6 list-unstyled">
      <li class="panel panel-primary">
        <div class="panel-heading">
          <h2 class="panel-title"><%= @airport.name %></h2>
        </div>
        <ul class="panel-body list-unstyled text-center">
          <li class="col-sm-3">
            <%= @airport.city.name %>
          </li>
          <li class="col-sm-3">
            <%= @airport.city.country_name%>
          </li>
          <li class="col-sm-3">
            <%= @airport.city.time_zone %>
          </li>
          <li class="col-sm-3">
            <a href="<%= airport_path(@airport.id) %>" data-method="delete" class="btn btn-danger"> Delete </a>
          </li>

        </ul>
      </li>
    </ul>

  </section>
</div>
