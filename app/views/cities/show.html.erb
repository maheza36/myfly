<div class="container">
  <div class="text-center">
      <a href="<%= cities_path %>" class="btn btn-primary"> View all </a>
  </div>
  <p></p>
</div>

<div class="container">
  <section>
    <ul class="col-sm-5 list-unstyled">
      <li class="panel panel-primary">
        <div class="panel-heading">
          <h2 class="panel-title"><%= @city.name %></h2>
        </div>
        <ul class="panel-body list-unstyled text-center">
          <li class="col-sm-3">
            <%= @city.country_name %>
          </li>
          <li class="col-sm-3">
            <%= @city.time_zone %>
          </li>
          <li class="col-sm-3">
            <a href="<%= city_path(@city.id) %>" data-method="delete" class="btn btn-danger"> Delete </a>
          </li>
        </ul>
      </li>
    </ul>
  </section>
</div>
