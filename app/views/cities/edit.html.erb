<div class="container">
    <h1 class="text-center">EDIT CITY</h1>
</div>
<div class="container">
  <div class="col-md-offset-4 col-md-4">
    <section class="row text-center">
      <a href="<%= cities_path %>" class="btn btn-primary">RETURN CITIES</a>
    </section>
  </div>
</div>

<div class="container">
  <%= form_for @city do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :country_name %>
      <%= f.text_field :country_name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :time_zone %>
      <%= f.text_field :time_zone, class: "form-control" %>
    </div>
    <%= f.submit "Update City", class:"btn btn-primary" %>
  <% end %>
</div>

<div class="container">
  <% if @city.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@city.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @city.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
